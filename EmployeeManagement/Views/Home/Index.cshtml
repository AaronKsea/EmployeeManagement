@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index Page";
}

<div class="card-deck ">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "personnel2.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header ">
                <h3>@employee.Name</h3>
            </div>
            <div class="card-body text-center"><img class="card-img-top imageThumbnail" style="height:200px;width:200px" src="@photoPath" alt="Alternate Text" asp-append-version="true" /></div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@employee.EmployeeID" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="edit" asp-route-employeeid="@employee.EmployeeID" class="btn btn-info">Edit</a>
                <a href="#" class="btn btn-danger">Danger</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/CustomJavaScript.js"></script>
}
