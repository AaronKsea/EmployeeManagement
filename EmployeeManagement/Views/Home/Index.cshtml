@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index Page";
}

<div class="card-deck ">
    @foreach (var employee in Model)
    {
    <div class="card m-3">
        <div class="card-header ">
            <h3>@employee.Name</h3>
        </div>
        <img class="card-img-top justify-content-md-center" src="./Images/personnel.jpg" alt="Alternate Text" asp-append-version="true" />
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="details" asp-route-id="@employee.EmployeeID" class="btn btn-primary">View</a>
            <a href="#" class="btn btn-info">Edit</a>
            <a href="#" class="btn btn-danger">Danger</a>
        </div>
    </div>
    }
</div>

@section Scripts {
    <script src="~/js/CustomJavaScript.js"></script>
}
