@model HomeDetailsViewModel

@{ 
    ViewBag.Title = "Details page";
    var photoPath = "~/Images/" + (Model.employee.PhotoPath ?? "personnel2.jpg");
}

<div class=" row justify-content-center m-2">
    <div class="col-md-8">
        <div class="card text-center">
            <div class="card-header ">
                <h3>@Model.Title</h3>
            </div>
            <div class="card-body ">
                <img class="card-img-top" style="height:200px;width:200px" src="@photoPath" alt="Alternate Text" asp-append-version="true"/>
                <h4>EmployeeId: @Model.employee.EmployeeID</h4>
                <h4>EmployeeName: @Model.employee.Name</h4>
                <h4>Employee Email: @Model.employee.Email</h4>
            </div>
            <div class="card-footer">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-employeeid="@Model.employee.EmployeeID" class="btn btn-info">Edit</a>
                <a href="#" class="btn btn-danger">Danger</a>
            </div>
        </div>
    </div>
</div>


